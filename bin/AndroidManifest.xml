<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.qingguow.qingguoapp"
    android:versionCode="1"
    android:versionName="beta1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.qingguow.qingguoapp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="cn.qingguow.qingguoapp.GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.qingguow.qingguoapp.ArticleListActivity"
            >
        </activity>
        <activity
            android:name="cn.qingguow.qingguoapp.ArticleDetailActivity"
            >
        </activity>
        <activity
            android:name="cn.qingguow.qingguoapp.LoginActivity"
            >
        </activity>
         <uses-library  android:name="android.test.runner"/>
    </application>
	<uses-permission android:name="android.permission.INTERNET"/>
    	<!-- 单元测试 -->
    <instrumentation android:name="android.test.InstrumentationTestRunner"
	    android:targetPackage="cn.qingguow.qingguoapp" android:label="测试" />
</manifest>
